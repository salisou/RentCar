@model List<ResultCommentDto>

<ul class="list-unstyled comment-list">
    @foreach (var item in Model)
    {
        <li class="comment mb-4">
            <div class="card shadow-sm rounded-3">
                <div class="card-body d-flex gap-3">
                    <img src="@item.BlogCoverImageUrl" alt="@($"{item.AuthorName} avatar")"
                         class="rounded-circle flex-shrink-0" width="56" height="56" loading="lazy" />

                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-1 fw-bold">@item.AuthorName</h6>
                            <small class="text-muted">@item.CreatedDate.ToString("dd MMM yyyy")</small>
                        </div>
                        <p class="mb-2">@item.Content</p>
                        <a href="#" class="text-primary d-flex align-items-center gap-1" aria-label="Reply to @item.AuthorName">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                                <path d="M6.598 5.013a.5.5 0 0 0 0 .974l4.796 1.638a.25.25 0 0 1 .162.237v.922a.25.25 0 0 1-.162.237l-4.796 1.638a.5.5 0 1 0 .398.916l4.796-1.638a1.75 1.75 0 0 0 1.134-1.657v-.922a1.75 1.75 0 0 0-1.134-1.657L6.598 5.013z" />
                            </svg>
                            Reply
                        </a>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
