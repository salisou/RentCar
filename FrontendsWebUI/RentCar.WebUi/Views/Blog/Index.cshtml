@model List<ResultAllBlogWithAuthorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UiLayout/Index.cshtml";
}


<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-md-12 text-center d-flex ftco-animate">
                        <div class="blog-entry justify-content-end mb-md-5">
                            <a href="/Blog/Detail/" class="block-20 img" style="background-image: url('@item.CoverImageUrl');">
                            </a>
                            <div class="text px-md-5 pt-4">
                                <div class="meta mb-3">
                                    <div><a href="#">@item.CreatedAt.ToShortDateString()</a></div>
                                    <div><a href="#">@item.AuthorName</a></div>
                                    <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                                </div>
                                <h3 class="heading mt-2"><a href="/Blog/BlogDetail/">@item.Title</a></h3>
                                <p>@item.Description</p>
                                <p><a href="/Blog/Detail/" class="btn btn-primary">Continue <span class="icon-long-arrow-right"></span></a></p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No blogs available.</p>
                </div>
            }
        </div>
    </div>
</section>


